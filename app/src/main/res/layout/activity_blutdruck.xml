<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BlutdruckActivity">

    <EditText
        android:id="@+id/Blutdrucks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/Textfieldblutdruckd"
        android:ems="10"
        android:hint="e.g. 120"
        android:inputType="number"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/Blutdruckd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Textfieldblutdruckd"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="e.g 80"
        android:inputType="number"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="updateText"
        android:text="@string/best_tigen"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/Blutdruckd"
        />

    <TextView
        android:id="@+id/Textfieldblutdrucks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/Blutdrucks"
        android:layout_centerHorizontal="true"
        android:text="Geben Sie hier Ihren systolischen Blutdruck ein"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/Textfieldblutdruckd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Geben Sie hier Ihren diastolischen Blutdruck ein"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/Warning"
        android:layout_width="341dp"
        android:layout_height="81dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/button"
        android:layout_marginTop="50dp"
        android:text="!Ihr Blutdruck weicht von den Normwerten ab. Ist dies Ã¼ber mehrere Tage der Fall, wird empfohlen einen Arzt aufzusuchen!"
        android:textColor="@color/red"
        android:textSize="15sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Textfieldblutdrucks"
        android:layout_marginBottom="32dp"
        android:layout_centerHorizontal="true"
        android:text="Werte wurden gespeichert"
        android:textColor="@color/green"
        android:textSize="17sp"
        android:visibility="invisible" />

</RelativeLayout>